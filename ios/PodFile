workflows:
  ios-simulator-build:
    name: iOS Simulator Build
    max_build_duration: 60
    instance_type: mac_mini_m2
    environment:
      flutter: stable
      xcode: latest
      cocoapods: default
    scripts:
      - name: Flutter Clean & Get Packages
        script: |
          flutter clean
          flutter pub get
      
      - name: Force Update Deployment Target to 15.0 (Windows Fix)
        script: |
          # BU KOMUT PROJE DOSYASINDAKI ESKI SURUMLERI 15.0 OLARAK DEGISTIRIR
          cd ios
          find . -name "project.pbxproj" -exec sed -i '' 's/IPHONEOS_DEPLOYMENT_TARGET = [0-9]*\.[0-9]*;/IPHONEOS_DEPLOYMENT_TARGET = 15.0;/g' {} +
          cd ..

      - name: Force Generate iOS Config
        script: |
          flutter build ios --config-only --no-codesign --debug
      
      - name: Install & Update CocoaPods
        script: |
          cd ios
          rm -rf Pods
          rm -f Podfile.lock
          # Podfile'i da garantiye alalim
          sed -i '' "s/platform :ios, .*/platform :ios, '15.0'/" Podfile
          pod install --repo-update
      
      - name: Build .app for Simulator
        script: |
          # Firebase dosyasini kopyala
          mkdir -p build/ios/iphonesimulator/Runner.app
          cp ios/Runner/GoogleService-Info.plist build/ios/iphonesimulator/Runner.app/GoogleService-Info.plist
          
          # Derle
          flutter build ios --debug --simulator --no-codesign
    artifacts:
      - build/ios/iphonesimulator/Runner.app